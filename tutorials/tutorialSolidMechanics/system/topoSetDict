FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      topoSetDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

actions
(

{
        //marks all cells with distance of less than 5 mm from parting plane (x=0) for removal
	name    cellsToBeRemoved;
        type    cellSet;
        action  new;
        source  boxToCell;
        sourceInfo
        {
		box   (-5e-3 -100 -100) (5e-3 100 100);
    	}
		

}
    

{
        //however, cells close to stl may stay and form sealing surface
	name    cellsToBeRemoved;
        type    cellSet;
        action  delete;
        source  surfaceToCell;
	
        sourceInfo
        {
     
   
		file			"flowChannel.stl";

		outsidePoints	((0 0 10e-3));
		useSurfaceOrientation false;
		
		
		//enable one of the following five
		nearDistance 	0.010;		//-1 means deactivated, otherwise: pick all cells within [value] m of geometry.stl
		includeInside	false;		// pick all cells entirely within the geometry.stl
		includeOutside	false;		// pick all cells entirely outside of geometry.stl
		includeCut		true;		// pick all cells intersected by geometry.stl
		curvature		1;		//-100 means deactivated, combine this with nearDistance
			
	}
}



{
       //however, cells close to stl may stay and form sealing surface
	name    cellsToBeRemoved;
        type    cellSet;
        action  delete;
        source  surfaceToCell;
	
        sourceInfo
        {
     
   
		file			"inletChannel.stl";

		outsidePoints	((0 0 10e-3));
		useSurfaceOrientation false;
		
		
		//enable one of the following five
		nearDistance 	0.010;		//-1 means deactivated, otherwise: pick all cells within [value] m of geometry.stl
		includeInside	false;		// pick all cells entirely within the geometry.stl
		includeOutside	false;		// pick all cells entirely outside of geometry.stl
		includeCut	true;		// pick all cells intersected by geometry.stl
		curvature	1;		//-100 means deactivated, combine this with nearDistance
			
	}
		

}



);





